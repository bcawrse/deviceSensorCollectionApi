{
  "name": "devicesensorweb",
  "version": "1.0.0",
  "description": "dotnet core 3.0 web app for managing devicesensorapi",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:scss": "node-sass --output-style compressed ./wwwroot/css/sass/main.scss ./wwwroot/css/main.min.scss",
