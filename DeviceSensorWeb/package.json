{
  "name": "devicesensorweb",
  "version": "1.0.0",
  "description": "dotnet core 3.0 web app for managing devicesensorapi",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:js": "uglifyjs wwwroot/js/site/*.js -o wwwroot/js/site.min.js",
    "build:scss": "node-sass --output-style compressed ./wwwroot/css/sass/main.scss ./wwwroot/css/main.min.css",
    "watch:js": "chokidar 'wwwroot/js/site/**/*.js' -c 'npm run build:js'",
    "watch:scss": "chokidar 'wwwroot/css/sass/**/*.scss' -c 'npm run build:scss'",
    "build": "npm-run-all -l -p build:js build:scss",
    "watch": "npm-run-all -l -p watch:scss watch:js"
  },
  "author": "Ben Cawrse",
  "license": "MIT",
  "devDependencies": {
    "chokidar-cli": "^2.0.0",
    "node-sass": "^4.13.0",
    "npm-run-all": "^4.1.5",
    "uglify": "^0.1.5",
    "uglify-js": "^3.6.4"
  }
}
